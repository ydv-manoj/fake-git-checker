# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Groq AI Configuration
GROQ_API_KEY=your_groq_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/fake-git-checker
# For MongoDB Atlas use: mongodb+srv://username:password@cluster.mongodb.net/fake-git-checker

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Application Settings
NODE_ENV=development
APP_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=4000
CACHE_TTL_SECONDS=3600

# Optional: Redis Configuration (for enhanced caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Optional: Application Monitoring
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here